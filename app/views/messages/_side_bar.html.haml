-# <サイドバー>
.side-bar
  .side-bar__user-name
    .side-bar__user-name__list
      .side-bar__user-name__list__name
        = current_user.name
      .side-bar__user-name__list__menu
        = link_to new_group_path do
          =icon('fas', 'edit',class: 'icon')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
  .side-bar__group-list
    .group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group__group-name
            = group.name
          .group__last-message
            = group.show_last_message 